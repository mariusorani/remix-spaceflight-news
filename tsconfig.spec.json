{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "out-tsc",
    "module": "commonjs",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "target": "ES2022"
  },
  "include": [
    "jest.config.ts",
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.tsx",
    "tests/**/*.test.tsx",
    "tests/**/*.spec.js",
    "tests/**/*.test.js",
    "tests/**/*.spec.jsx",
    "tests/**/*.test.jsx",
    "tests/setup.ts",
    "styled-system/**/*"
  ]
}
