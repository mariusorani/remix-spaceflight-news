{
  "name": "remix-panda-radix-netlify",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "npx remix-serve build/server/index.js",
    "preview": "vite preview --port 8888",
    "serve:test": "NODE_ENV=production npx remix-serve build/server/index.js",
    "typecheck": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:ui": "npm run build && playwright test --ui",
    "test:e2e:debug": "npm run build && playwright test --debug",
    "test:e2e:codegen": "playwright codegen http://localhost:3000",
    "test:all": "npm test && npm run test:e2e",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@netlify/functions": "^2.6.0",
    "@netlify/remix-adapter": "^2.3.1",
    "@radix-ui/react-aspect-ratio": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.5",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-select": "^2.1.5",
    "@radix-ui/themes": "^2.0.3",
    "@remix-run/dev": "^2.15.2",
    "@remix-run/node": "^2.14.0",
    "@remix-run/react": "^2.15.2",
    "@remix-run/serve": "^2.15.2",
    "@remix-run/testing": "^2.15.2",
    "isbot": "^4.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.1.3",
    "whatwg-fetch": "^3.6.20"
  },
  "devDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@pandacss/dev": "^0.51.1",
    "@playwright/test": "^1.50.0",
    "@remix-run/dev": "^2.15.2",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "serve": "^14.2.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6",
    "vite": "^5.4.8",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ]
  }
}
